            </description>
            <name>exception</name>
            <required>false</required>
            <rtexprvalue>false</rtexprvalue>
        </attribute>
    </tag>

    <tag>
        <description>
        	Logs at info level
        </description>
        <name>info</name>
        <tag-class>com.agnitas.taglib.log4j.InfoLog4JTag</tag-class>
        <body-content>empty</body-content>
        <attribute>
            <description>
                Name of destination logger
            </description>
            <name>logger</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
        <attribute>
            <description>
                Message to log
            </description>
            <name>message</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
        <attribute>
            <description>
