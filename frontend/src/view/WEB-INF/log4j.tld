    </tag>

    <tag>
        <description>
        	Logs at trace level
        </description>
        <name>trace</name>
        <tag-class>com.agnitas.taglib.log4j.TraceLog4JTag</tag-class>
        <body-content>empty</body-content>
        <attribute>
